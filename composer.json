{
    "name": "codeia/bloom",
    "description": "Another MVC framework",
    "license": "MIT",
    "authors": [{
            "name": "Mon Zafra",
            "email": "mz@codeia.ph",
            "role": "developer"
    }],

    "autoload": {
        "psr-4": {
            "Codeia\\": "src"
        }
    },

    "autoload-dev": {
        "psr-4": {
            "demo\\": "demo",
            "Codeia\\": "tests"
        }
    },

    "require": {
        "php": ">=5.6",
        "guzzlehttp/psr7": "^1.3",
        "nikic/fast-route": "^1.0",
        "codeia/di-senpai": "^0.1.5"
    },

    "require-dev": {
        "phpunit/phpunit": "^5.4",
        "whatthejeff/nyancat-phpunit-resultprinter": "^1.2",
        "kujira/phpunit-printer": "dev-master"
    },

    "scripts": {
        "test": "phpunit tests --colors=always --printer 'Kujira\\PHPUnit\\Printer'"
    },

    "repositories": [{
        "type": "vcs",
        "url": "https://github.com/monzee/kujira-phpunit-printer"
    }]

}
